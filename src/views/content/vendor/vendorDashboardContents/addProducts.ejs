<main class="w-full p-[10px] pt-0 text-white">
    <div class="bg-[#1F1E1E] shadow-md shadow-black p-[10px] w-full flex justify-center flex-col items-center">
        <div class="w-[70%] flex justify-end items-center flex-col">
            <div class="text-[20px]">Add Product</div>
            <form action="/api/proxy/postproddata" method="post" class="w-full mt-[20px]" enctype="multipart/form-data">
                <div class="w-full border-b-[1px] border-[#2d2a2a]" id="cat">
                    <div class="w-full flex flex-row my-[10px]" id="thisis0">
                        <select id="0" name="depth0" onchange="getThisSub(this.value, this.id)" class="w-full h-fit bg-[#312f2f] focus:bg-[#424040] outline-none p-[10px] text-[#aeacac]" required>
                            <option value="">Select the Category</option>
                            <% rootCat.forEach(element => { %>
                                <option value="<%= element.category_id%>"><%= element.alt_name%></option>
                            <% }) %>
                        </select>
                    </div>
                    <span id="subcategories"></span>
                </div>
    
                <input type="hidden" name="vendorid" value="<%- vid %>">
    
                <input type="text" id="prodName" placeholder="Name of the Product..." name="prodName" class="w-full my-[10px] h-[40px] bg-[#312f2f] focus:bg-[#424040] focus:outline-none pl-[10px] placeholder:text-[#aeacac]" required>
        
                <div class="w-full flex flex-row my-[10px]">
                    <div class="w-full mr-[10px]" id="prcdiv">
                        <input type="text" id="prodPrice" placeholder="Price of the Product..." name="prodPrice" class="w-full h-[40px] bg-[#312f2f] focus:bg-[#424040] focus:outline-none pl-[10px] placeholder:text-[#aeacac]" required>
                    </div>
                    <div class="w-full" id="qtydiv">
                        <input type="text" id="prodQuantity" placeholder="Quantity..." name="prodQuantity" class="w-full h-[40px] bg-[#312f2f] focus:bg-[#424040] focus:outline-none pl-[10px] placeholder:text-[#aeacac]" required>
                    </div>
                </div>
        
                <textarea id="areastyle1" name="prodDesc" placeholder="Enter the Product Description..." class="h-[150px] resize-none w-full my-[10px] bg-[#312f2f] focus:bg-[#424040] focus:outline-none p-[10px] placeholder:text-[#aeacac]" required></textarea>

                <input type="file" name="prodImage" accept=".jpg,.jpeg,.png" class="w-full mt-[10px] mb-[5px] h-[40px] bg-[#312f2f] focus:bg-[#424040] outline-none text-[#aeacac] file:bg-red-700 file:hover:bg-red-800 file:h-full file:text-white file:border-0 file:px-[10px] file:mr-[20px]" required multiple>
                <div class="text-[15px] text-[#ffcc00]">*Maximum 5 images allowed. File size must not exceed 5MB. Allowed file types (.png, .jpg, .jpeg)</div>
                <div class="mb-[20px] text-[15px] text-[#ffcc00]">*Name your front-facing image file 'main' to avoid random ordering.</div>
        
                <div class="w-full flex flex-row my-[10px]">
                    <button id="btnstyle1" type="reset" onclick="resetForm()" class="bg-red-700 hover:bg-red-800 w-full h-[35px] mr-[20px]">Clear</button>
                    <button id="submitbtn" type="submit" class="bg-red-700 hover:bg-red-800 w-full h-[35px]">Submit</button>
                </div>
    
            </form>
        </div>
    </div>
</main>